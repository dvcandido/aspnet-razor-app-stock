@page
@model Pages.StockInputs.AddModel
@{
    ViewData["Title"] = "Add page";
}
<form method="post">
    <div class="border p-3 mt-4" style="width:50%">
        <div class="row pb-2">
 			<h2 class="text-primary pl-3">Add Stock Input</h2>
 			<hr />
 		</div>
        <div class="form-group mb-3">
            <label asp-for="StockInput.ProductId" class="control-label"></label>
            <select asp-for="StockInput.ProductId" asp-items="@(Model.Products)" class="form-control">
                <option value="">Selecione um produto</option>
            </select>
            <span asp-validation-for="StockInput.ProductId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="StockInput.Date" class="control-label"></label>
            <input asp-for="StockInput.Date" type="date" class="form-control" />
            <span asp-validation-for="StockInput.Date" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="StockInput.Quantity" class="control-label"></label>          
            <input asp-for="StockInput.Quantity" type="number" class="form-control" />
            <span asp-validation-for="StockInput.Quantity" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>